                            <script>
                            (function() {
                                var form = document.currentScript.closest('form');
                                var tglPinjam = form.querySelector('input[name="tanggal_pinjam"]');
                                var tglKembali = form.querySelector('input[name="tanggal_kembali"]');
                                function setTanggalKembali() {
                                    if (tglPinjam.value) {
                                        var pinjamDate = new Date(tglPinjam.value);
                                        pinjamDate.setDate(pinjamDate.getDate() + 7);
                                        var yyyy = pinjamDate.getFullYear();
                                        var mm = String(pinjamDate.getMonth() + 1).padStart(2, '0');
                                        var dd = String(pinjamDate.getDate()).padStart(2, '0');
                                        var maxKembali = yyyy + '-' + mm + '-' + dd;
                                        tglKembali.min = tglPinjam.value;
                                        tglKembali.max = maxKembali;
                                        if (!tglKembali.value || tglKembali.value < tglPinjam.value || tglKembali.value > maxKembali) {
                                            tglKembali.value = maxKembali;
                                        }
                                    }
                                }
                                tglPinjam.addEventListener('change', setTanggalKembali);
                                setTanggalKembali();
                            })();
                            </script>
